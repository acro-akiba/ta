{
  "description": "PN037の合致可否判定をするpipeline",
  "processors": [
    {
      "script": {
        "lang": "painless",
        "source": """
        if(ctx.name =~ /cell surface|cell surface protein|conserved hypothetical|hypothetical conserved|identified by|identity to|involved in|implicated in|protein domain protein|protein of unknown function|protein hypothetical|protein protein|protein putative|putative putative|questionable protein|related to|signal peptide protein|similar to|surface antigen|surface protein|unknown protein|authentic point mutation|low quality protein|C term|C terminal|N term|N terminal|inactivated derivative|conserved uncharacterized|uncharacterized conserve/){
          ctx.guideline_noncompliance_list.add("PN037"); 
        }
        else{
          ctx.guideline_PN037 = "1";
          ctx.guideline_compliance_list.add("PN037");
        }
      """,
        "on_failure": [
          {
            "append": {
              "field": "error_pipeline",
              "value": "judge-guideline-compliance-PN037"
            }
          }
        ]
      }
    }
  ]
}
