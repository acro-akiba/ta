{
  "description": "PN049の合致可否判定をするpipeline",
  "processors": [
    {
      "script": {
        "lang": "painless",
        "source": """
        if(ctx.name =~ /\b(chain|component|type)\b/){
          ctx.guideline_noncompliance_list.add("PN049"); 
        }
        else{
          ctx.guideline_PN049 = "1";
          ctx.guideline_compliance_list.add("PN049");
        }
      """,
        "on_failure": [
          {
            "append": {
              "field": "error_pipeline",
              "value": "judge-guideline-compliance-PN049"
            }
          }
        ]
      }
    }
  ]
}
