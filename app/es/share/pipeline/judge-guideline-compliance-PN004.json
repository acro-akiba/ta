{
  "description": "PN004の合致可否判定をするpipeline",
  "processors": [
    {
      "script": {
        "lang": "painless",
        "source": """
        if (ctx.name =~ /(?:repeats|domains)/){
          ctx.guideline_noncompliance_list.add("PN004"); 
        }
        else{
          ctx.guideline_PN004 = "1";
          ctx.guideline_compliance_list.add("PN004");
        }
      """,
        "on_failure": [
          {
            "append": {
              "field": "error_pipeline",
              "value": "judge-guideline-compliance-PN004"
            }
          }
        ]
      }
    }
  ]
}
