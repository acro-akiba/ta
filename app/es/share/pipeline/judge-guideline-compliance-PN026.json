{
  "description": "PN026の合致可否判定をするpipeline",
  "processors": [
    {
      "script": {
        "lang": "painless",
        "source": """
        if(ctx.name =~ /^[A-Z0-9]+ [A-Z0-9 ]+$/){
          ctx.guideline_noncompliance_list.add("PN026");
        }
        else{
          ctx.guideline_PN026 = "1";
          ctx.guideline_compliance_list.add("PN026");
        }
      """,
        "on_failure": [
          {
            "append": {
              "field": "error_pipeline",
              "value": "judge-guideline-compliance-PN026"
            }
          }
        ]
      }
    }
  ]
}
