{
  "description": "PN002の合致可否判定をするpipeline",
  "processors": [
    {
      "script": {
        "lang": "painless",
        "source": """
        if (ctx.name =~ /[a-z]{3,}ine$/){
          ctx.guideline_noncompliance_list.add("PN002"); 
        }
        else{
          ctx.guideline_PN002 = "1";
          ctx.guideline_compliance_list.add("PN002");
        }
      """,
        "on_failure": [
          {
            "append": {
              "field": "error_pipeline",
              "value": "judge-guideline-compliance-PN002"
            }
          }
        ]
      }
    }
  ]
}
