{
  "description": "PN038の合致可否判定をするpipeline",
  "processors": [
    {
      "script": {
        "lang": "painless",
        "source": """
        if(ctx.name =~ /antigen|CDS|conserved|cytoplasmic|deletion|dubious|doubtful|expressed|fragment|frame shift|frameshift|genome|homolog|interrupt|KDa|K Da|likely|locus|locus_tag|novel|ORF|partial|possible|potential|predicted|probable|pseudo|pseudogene|secreted|strongly|truncate|truncated|under|unique|unnamed|WGS|Xray|X-ray/){
          ctx.guideline_noncompliance_list.add("PN038"); 
                  }
        else{
          ctx.guideline_PN038 = "1";
          ctx.guideline_compliance_list.add("PN038");
        }
      """,
        "on_failure": [
          {
            "append": {
              "field": "error_pipeline",
              "value": "judge-guideline-compliance-PN038"
            }
          }
        ]
      }
    }
  ]
}
