{
  "description": "PN018の合致可否判定をするpipeline",
  "processors": [
    {
      "script": {
        "lang": "painless",
        "source": """
        if (ctx.name =~ /,\s/){
          ctx.guideline_noncompliance_list.add("PN018");
        }
        else{
          ctx.guideline_PN018 = "1";
          ctx.guideline_compliance_list.add("PN018");
        }
      """,
        "on_failure": [
          {
            "append": {
              "field": "error_pipeline",
              "value": "judge-guideline-compliance-PN018"
            }
          }
        ]
      }
    }
  ]
}
