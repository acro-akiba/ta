{
  "description": "PN022の合致可否判定をするpipeline",
  "processors": [
    {
      "script": {
        "lang": "painless",
        "source": """
        if (ctx.name =~ /=/){
          ctx.guideline_noncompliance_list.add("PN022"); 
        }
        else{
          ctx.guideline_PN022 = "1";
          ctx.guideline_compliance_list.add("PN022");
        }
      """,
        "on_failure": [
          {
            "append": {
              "field": "error_pipeline",
              "value": "judge-guideline-compliance-PN022"
            }
          }
        ]
      }
    }
  ]
}
