{
  "description": "PN048の合致可否判定をするpipeline",
  "processors": [
    {
      "script": {
        "lang": "painless",
        "source": """
        if(ctx.name =~ /^(?i)(b|mult)ifunctional protein$/){
          ctx.guideline_noncompliance_list.add("PN048"); 
        }
        else{
          ctx.guideline_PN048 = "1";
          ctx.guideline_compliance_list.add("PN048");
        }
      """,
        "on_failure": [
          {
            "append": {
              "field": "error_pipeline",
              "value": "judge-guideline-compliance-PN048"
            }
          }
        ]
      }
    }
  ]
}
