{
  "description": "PN051の合致可否判定をするpipeline",
  "processors": [
    {
      "script": {
        "lang": "painless",
        "source": """
        if(ctx.name =~ /(.+hypothetical protein|hypothetical protein.+|.+uncharacterized protein|uncharacterized protein.+)/){
          ctx.guideline_noncompliance_list.add("PN051"); 
        }
        else{
          ctx.guideline_PN051 = "1";
          ctx.guideline_compliance_list.add("PN051");
        }
      """,
        "on_failure": [
          {
            "append": {
              "field": "error_pipeline",
              "value": "judge-guideline-compliance-PN051"
            }
          }
        ]
      }
    }
  ]
}
